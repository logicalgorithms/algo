char * stb(char * t, char * u)
{
	int length = strlen(u);
	char * bitmask = new char[strlen(universal) + 1]{'0'};

	for (int i = 0; i < length; i++)
	{
		bitmask[i] = '0';
		for (int j = 0; j < strlen(t); j++)
		{
			if (t[j] == u[i])
			{
				bitmask[i] = '1';
				break;
			}
		}
	}
	bitmask[length] = '\0';
	return bitmask;
}


